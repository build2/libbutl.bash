if [ "$butl_utility" = true ]; then
  return 0
else
  butl_utility=true
fi

if (( BASH_VERSINFO[0] < 4 || BASH_VERSINFO[0] == 4 && BASH_VERSINFO[1] < 3 )); then
  echo 'error: bash 4.3 or later is required' 2>&1
  exit 1
fi
